<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.basicandroidapp.FileOperationsActivity">

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <Button
        android:id="@+id/btnsavefile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text"
        android:text="Zapisz"
        android:onClick="save"
        />

    <Button
        android:id="@+id/btnloadfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnsavefile"
        android:text="Załaduj"
        android:onClick="load"
        />

    <Button
        android:id="@+id/btnback4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Powrót"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/btnloadfile"
        />

</RelativeLayout>
